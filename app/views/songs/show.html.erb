<div class="content">
  <div class="row mt-5">
      <div class="col-3">
      <%= image_tag "play.png", width: 150 %>
    </div>
    <div class="col-6">
      <h3>
        <%= @song.title %>
      </h3>

      <h4>
        <%= link_to @song.singer.name, singer_path %>
      </h4>

      <% if @song.genres.any? %>
        <span><%= t ".genres" %></span>
        <span>
          <%= render @genres %>
        </span>
      <% end %>

      <h4>
        <%= t "songs.view" %> 
        <%= @song.view %>
      </h4>

      <h5>
        <%= t "songs.post_at" %>
        <%= l @song.created_at %>
      </h5>
    </div>
  </div>
  
  <div class="col-9 row mt-5">
    <audio controls loop>
      <source src="<%= @song.song_url %>" type="audio/mp3">
    </audio>
  </div>

  <div class="col-9 row mt-5 mb-5">
    <%= t ".lyrics" %>
    <p>
      <%= @song.lyrics %>
    </p>
  </div>

  <div class="col-9 mb-5">
    <% if logged_in? %>
      <div class="row">
      <aside class="col-md-12">
          <%= render "shared/comment_form" %>
      </aside>
    <% end %>
    </div>
    <% if @song.comments.any? %>
      <span><%= @song.comments.count %><%= t ".comments_count" %></span>
      <ul class="comments">
        <%= render @comments %>
      </ul>
      <%= paginate @comments, theme: "twitter-bootstrap-3" %>
    <% end %>
  </div>
</div>
